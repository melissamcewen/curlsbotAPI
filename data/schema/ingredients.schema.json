{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "ingredients"
  ],
  "properties": {
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "id",
          "categories"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The display name of the ingredient"
          },
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "A unique identifier for the ingredient in snake_case"
          },
          "description": {
            "type": "string",
            "description": "Optional description of the ingredient's effects"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "drying_alcohols",
                "parabens",
                "sulfates",
                "emollient_alcohols",
                "water_soluble_silicones",
                "non_water_soluble_silicones",
                "other_preservatives",
                "other_anionic_surfactants",
                "preservative_alcohols",
                "astringents",
                "soaps",
                "mild_surfactants",
                "heavy_oils",
                "light_oils",
                "medium_oils",
                "non_water_soluble_waxes",
                "water_soluble_waxes",
                "evaporative_silicones",
                "other",
                "solvents",
                "polyquats",
                "petroleum_oils",
                "film_forming_humectants",
                "simple_humectants",
                "proteins",
                "other_oils",
                "other_emollients",
                "conditioning_agents"
              ]
            },
            "description": "Categories to which the ingredient belongs"
          },
          "references": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "url"
              ],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "The URL of the reference"
                },
                "title": {
                  "type": "string",
                  "description": "Optional title of the reference"
                },
                "description": {
                  "type": "string",
                  "description": "Optional description of what this reference proves/shows"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "science",
                    "hairpro",
                    "industry",
                    "author",
                    "other"
                  ],
                  "description": "Type of reference"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "ok",
                    "caution",
                    "warning",
                    "good"
                  ],
                  "description": "Status of the reference"
                }
              },
              "additionalProperties": false
            }
          },
          "synonyms": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional synonyms for the ingredient"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
