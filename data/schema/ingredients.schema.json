{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["ingredients"],
  "properties": {
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "id", "categories"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The display name of the ingredient"
          },
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "A unique identifier for the ingredient in snake_case"
          },
          "description": {
            "type": "string",
            "description": "Optional description of the ingredient's effects"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Categories to which the ingredient belongs"
          },
          "references": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "The URL of the reference"
                },
                "title": {
                  "type": "string",
                  "description": "Optional title of the reference"
                },
                "description": {
                  "type": "string",
                  "description": "Optional description of what this reference proves/shows"
                }
              },
              "additionalProperties": false
            },
            "description": "Optional source references for the ingredient"
          },
          "synonyms": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional synonyms for the ingredient"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
