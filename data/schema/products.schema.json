{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["products"],
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "brand", "buy_url", "product_categories"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the product"
          },
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique identifier for the product"
          },
          "brand": {
            "type": "string",
            "description": "Brand name"
          },
          "buy_url": {
            "type": "string",
            "format": "uri",
            "description": "URL where the product can be purchased"
          },
          "systems_excluded": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Systems this product is excluded from"
          },
          "product_categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Categories the product belongs to"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags the product belongs to"
          },
          "cost_rating": {
            "type": "string",
            "pattern": "^[1-5]$",
            "description": "Cost rating of the product (1-5)"
          },
          "ingredients_raw": {
            "type": "string",
            "description": "Raw ingredients list from the product"
          },
          "description": {
            "type": "string",
            "description": "Description of the product"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
