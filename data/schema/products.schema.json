{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["products"],
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "brand", "buy_links", "product_categories"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the product"
          },
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique identifier for the product"
          },
          "brand": {
            "type": "string",
            "description": "Brand name"
          },
          "buy_links": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "URL where the product can be purchased"
                },
                "country": {
                  "type": "string",
                  "description": "Country code for this link"
                },
                "retailer": {
                  "type": "string",
                  "description": "Name of the retailer"
                },
                "description": {
                  "type": "string",
                  "description": "Description of this purchase link"
                }
              }
            },
            "description": "Links where the product can be purchased"
          },
          "systems_excluded": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Systems this product is excluded from"
          },
          "product_categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Categories the product belongs to"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags the product belongs to"
          },
          "cost": {
            "type": "number",
            "minimum": 0,
            "description": "Cost per oz of the product in USD"
          },
          "ingredients_raw": {
            "type": "string",
            "description": "Raw ingredients list from the product"
          },
          "description": {
            "type": "string",
            "description": "Description of the product"
          },
          "asin": {
            "type": "string",
            "description": "Amazon Standard Identification Number"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
