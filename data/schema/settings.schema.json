{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["settings"],
  "properties": {
    "settings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$",
            "description": "A unique identifier for the setting in snake_case"
          },
          "name": {
            "type": "string",
            "description": "The display name of the setting"
          },
          "description": {
            "type": "string",
            "description": "Description of what this setting does"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of ingredient IDs to flag"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of category IDs to flag"
          },
          "flags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["avoid", "prefer", "avoid_others_in_category", "caution"]
            },
            "description": "List of flags to apply"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
